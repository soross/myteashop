<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="presentForm" type="com.crm.score.struts.form.PresentForm" />
    <form-bean name="scoreForm" type="com.crm.score.struts.form.ScoreForm" />
  </form-beans>

  <global-exceptions />
  <global-forwards >
      <forward name="result" path="/admin/score/result.jsp"></forward>
      <forward name="confirm" path="/admin/score/confirm.jsp"></forward>
  </global-forwards>
  <action-mappings >
    <action
      attribute="presentForm"
      input="/form/present.jsp"
      name="presentForm"
      parameter="task"
      path="/admin/present"
      scope="request"
      type="com.crm.score.struts.action.PresentAction" />
    <action
      attribute="scoreForm"
      input="/form/score.jsp"
      name="scoreForm"
      parameter="task"
      path="/admin/score"
      scope="request"
      type="com.crm.score.struts.action.ScoreAction" /> 

  </action-mappings>
  <controller
		processorClass="org.springframework.web.struts.DelegatingRequestProcessor">
	</controller>
  <message-resources parameter="com.crm.struts.ApplicationResources" />
  <plug-in
		className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation"
			value="/WEB-INF/applicationContext.xml" />
	</plug-in>
  
</struts-config>

